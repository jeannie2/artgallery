<%- contentFor('styles') %>
<style>
  body {
    background-color: black;
  }

  #pages-auth-login {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
  }

  h1, label {
    color: white;
    font-family: 'Bebas Neue', cursive;
  }

  h1 {
    padding-bottom: 30px;
    border-bottom: 0.5px solid white;
  }

  label {
    font-size: 1.5rem;
  }

  .btn {
    font-family: 'Bebas Neue', cursive;
  }

</style>
<%- contentFor('scripts') %>
<script>
const generateForm = ({ user, errors } = {}) => {
  return `
    <div class="row">
      <div id="form-wrapper" class="col-12 col-md-10 offset-md-1 col-lg-8 offset-lg-2">
        <form id="login-form">
          <div class="mb-3">
            <label for="user-email" class="form-label">Email</label>
            <input
              id="user-email"
              class="form-control ${errors?.email && 'is-invalid'}"
              name="email"
              value="${user?.email || ''}"
              type="email"
            ></input>
            <div class="invalid-feedback">${errors?.email || ''}</div>
          </div>

          <div class="mb-3">
            <label for="user-password" class="form-label">Password</label>
            <input
              id="user-password"
              class="form-control ${errors?.password && 'is-invalid'}"
              name="password"
              value="${user?.password || ''}"
              type="password"
            ></input>
            <div class="invalid-feedback">${errors?.password || ''}</div>
          </div>

          <button class="btn btn-lg btn-light" type="submit">Submit</button>
        </form>
      </div>
    </div>
  `
}

const generatePage = (info) => {
  const $page = $('#pages-auth-login')
  const $title = '<h1 class="text-center">Login</h1>'
  const $form = generateForm(info)

  $page.html('').append($title).append($form)
}

const handleLogin = (e) => {
  e.preventDefault()

  const data = new FormData(e.target)
  $('#login-form button[type="submit"]').attr('disabled', true)

  axios({
    method: 'POST',
    url: '/api/auth/login',
    data
  }).then(() => {
    window.location.href = `/my/listings` // check
  }).catch((err) => {
    generatePage({
      user: parseFormData(data),
      errors: err.response.data
    })
  })
}

$(document).ready(() => {
  generatePage()
  $('#pages-auth-login').on('submit', '#login-form', handleLogin)
  $(".navbar").hide();
})

</script>

<%- contentFor('body') %>
<div id="pages-auth-login" class="container"></div>

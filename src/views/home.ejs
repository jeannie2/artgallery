<%- contentFor('styles') %>
<style>
.container {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%)
}

.row {
  border: 2px solid green;
}

.col {
  height: 50vh;
  border: 2px solid green;
}

#visitors {
  display: block;
  opacity: 0.5;
  background-image: url("/assets/hand_right.png");
  background-position: center;
  background-size: cover;
  background-color: red;
}

#exhibitors {
  opacity: 0.5;
  background-color: blue;
}

#exhibitors {
  display: block;
  opacity: 0.5;
  background-image: url("/assets/hand_left.png");
  background-position: center;
  background-size: cover;
}

#visitors:hover,
#exhibitors:hover {
  opacity: 0.8;
}

#visitors:hover {
  background-image: url("/assets/hand_left.png");
  background-size: cover;
}

#exhibitors:hover {
  background-image: url("/assets/hand_right.png");
  background-size: cover;
}

h1 {
  color: white;
  font-family: 'Bebas Neue', cursive;
}

h2,
a {
  font-family: 'Bebas Neue', cursive;
  color: black;
}

a {
  font-size: 2rem;
  transition: color .3s ease-in-out, box-shadow .3s ease-in-out;
  color: white;
  text-decoration: none;
  box-shadow: inset 0 0 0 0 black;
}

a:hover {
  box-shadow: inset 100px 0 0 0 black;
  color: white;
}

img {
  position: relative;
  top: -30%;
  left: -10%;
  width: 50%;
  height: auto;

}
</style>
<%- contentFor('scripts') %>
<%- contentFor('body') %>
<div id="home" class="container">
  <div class="row text-center">
    <h1> M o M A online </h1>
  </div>

  <div class="row text-center">
    <div id="visitors" class="col">
      <h2 class="display-1">Visitors </h2><br>
        <a href="/allHalls">Enter</a>
  </div>

  <div id="exhibitors" class="col">
    <h2 class="display-1">Exhibitors </h2><br>
      <a href="auth/login" class="mx-2">Login </a>
      <a href="auth/signup">Register </a>
    </div>
  </div>
</div>
<script>
$(".navbar").hide();
</script>

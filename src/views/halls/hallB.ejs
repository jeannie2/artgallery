        <div class="card">
      <a class="card t

      const generatePagination = (isLoading, { currentPage = 1, totalPages = 1 } = {}) => {
              if (isLoading) return ''

              let links = ''

              if (totalPages > 2 && currentPage > 1) links += `<li class="page-item"><a class="page-link" href="#" data-page="1">First</a></li>`

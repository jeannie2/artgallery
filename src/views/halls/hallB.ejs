              links += `<li class="page-item active"><a class="page-link">${currentPage}</a></li>`

              if (currentPage + 1 <= totalPages) links += `<li class="page-item"><a class="page-link" href="#" data-page="${currentPage + 1}">${currentPage + 1}</a></li>`

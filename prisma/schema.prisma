model Listing {
  id          Int    @id @default(autoincrement())
  title       String
  description String
  hallId      String
  link        String
  user        User?  @relation(fields: [userId], references: [id])
  userId      Int?
}

model User {
  id           Int       @id @default(autoincrement())
  email        String    @unique
  passwordHash String
  name         String
  bio          String
  link         String
  listings     Listing[]
}
